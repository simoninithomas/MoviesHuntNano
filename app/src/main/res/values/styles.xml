<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="colorControlHighlight">@android:color/white</item>


    </style>


    <style name="MovieTitle" parent="android:Theme.Material">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="NormalText" parent="android:Theme.Material">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SynopsisText" parent="android:Theme.Material">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ReviewText" parent="android:Theme.Material">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>
